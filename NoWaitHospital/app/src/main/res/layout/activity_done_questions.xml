<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uchealth.healthhack.nowaithospital.DoneQuestionsActivity"
    android:background="#289473">

    <ImageView
        android:id="@+id/check_iamge"
        android:layout_width="70dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/success"/>

    <TextView
        android:id="@+id/more_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add more details?"
        android:textColor="#ffffff"
        android:layout_below="@+id/check_iamge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:textSize="30dp"/>

    <ImageView
        android:id="@+id/take_pic_iv"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:src="@drawable/take_picture"
        android:layout_below="@+id/more_detail_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#2ea782"/>

    <TextView
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT >"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:textSize="30dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:background="#2ea782"
        android:padding="7dp"/>
</RelativeLayout>
